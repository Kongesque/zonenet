# Backend .env example
# Copy to .env and update values

# Auth - Argon2id hashed password
# Generate with: python -c "from argon2 import PasswordHasher; print(PasswordHasher().hash('yourpassword'))"
LOCUS_PASSWORD_HASH=$argon2id$v=19$m=65536,t=3,p=4$changeme

# Secret key for JWT signing (generate a secure random string for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=super-secret-key-change-in-production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Enable debug mode (enables /docs endpoint)
DEBUG=true

# Database path
DATABASE_PATH=./data/locus.db

# Token expiration (hours)
ACCESS_TOKEN_EXPIRE_HOURS=24
